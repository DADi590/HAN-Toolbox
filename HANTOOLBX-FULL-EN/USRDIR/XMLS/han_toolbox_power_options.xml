<XMBML version="1.0">

<!-- Main Items > HAN functions > Power Options -->

	<View id="han_power_options_main">
		<Attributes>
			<Table key="han_reboot_soft_auto">
				<Pair key="icon"><String>/dev_hdd0/game/HANTOOLBX/USRDIR/IMAGES/reboot.png</String></Pair>
				<Pair key="title"><String>Soft Reboot</String></Pair>
				<Pair key="info"><String>Restart console</String></Pair>
				<Pair key="module_name"><String>webrender_plugin</String></Pair>
				<Pair key="module_action"><String>http://www.ps3xploit.com/autoxml/pett/syscalls/power/soft_reboot.html</String></Pair>
			</Table>
			<Table key="han_reboot_hard_auto">
				<Pair key="icon"><String>/dev_hdd0/game/HANTOOLBX/USRDIR/IMAGES/reboot.png</String></Pair>
				<Pair key="title"><String>Hard Reboot</String></Pair>
				<Pair key="info"><String>Restart console</String></Pair>
				<Pair key="module_name"><String>webrender_plugin</String></Pair>
				<Pair key="module_action"><String>http://www.ps3xploit.com/autoxml/pett/syscalls/power/hard_reboot.html</String></Pair>
			</Table>
			<Table key="han_shutdown_auto">
				<Pair key="icon"><String>/dev_hdd0/game/HANTOOLBX/USRDIR/IMAGES/shutdown.png</String></Pair>
				<Pair key="title"><String>Shutdown</String></Pair>
				<Pair key="info"><String>Turn off console</String></Pair>
				<Pair key="module_name"><String>poweroff_plugin</String></Pair>
				<Pair key="module_action"><String></String></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query 
				class="type:x-xmb/module-action"
				key="han_reboot_soft_auto"
				attr="han_reboot_soft_auto"
				/>
			<Query 
				class="type:x-xmb/module-action"
				key="han_reboot_hard_auto"
				attr="han_reboot_hard_auto"
				/>
			<Query 
				class="type:x-xmb/module-action"
				key="han_shutdown_auto"
				attr="han_shutdown_auto"
				/>			
		</Items>
	</View>
	
</XMBML>
